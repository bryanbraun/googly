{
    "manifest_version": 3,
    "name": "Googly",
    "version": "1.0",
    "description": "Add Googly eyes to any webpage.",
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "24": "images/icon-24.png",
            "32": "images/icon-32.png"
        },
        "default_title": "Googly"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ]
}